<%= render "shared/context_nav", title: t("activerecord.models.#{OOrcamento.model_name.i18n_key}.other"), new_path: new_o_orcamento_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.#{OOrcamento.model_name.i18n_key}.other") %></span>
<% end %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :user_cont, class: "form-control", placeholder: "Pesquisar" %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <%= link_to  tag.i(class: 'ph-x-circle'), o_orcamentos_path, class: "btn btn-light" if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <div class= "table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center">Ações</th>
            <th><%= sort_link(@q, :user, t("activerecord.attributes.orcamento.user")) %></th>
            <th><%= sort_link(@q, :g_veiculo, t("activerecord.attributes.o_orcamento.veiculo")) %></th>
            <th><%= sort_link(@q, :g_centro_custo, t("activerecord.attributes.o_orcamento.centro_custo_R$")) %></th>
            <th><%= sort_link(@q, :o_tipo_solicitacao, t("activerecord.attributes.o_orcamento.tipo_solicitacao")) %></th>
            <th><%= sort_link(@q, :o_status, t("activerecord.attributes.o_orcamento.status")) %></th>
            <th><%= sort_link(@q, :valor_total, t("activerecord.attributes.o_orcamento.valor_total")) %></th>
          </tr>
        </thead>
        <tbody>
          <% @o_orcamentos.each do |o_orcamento| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu" style="">
                    <div class="dropdown-header">Opções</div>
                    <%= link_to edit_o_orcamento_path(o_orcamento), class: "dropdown-item" do %>
                      <i class="ph-pen me-2"></i> Editar
                    <% end %>
                    <%= form_for o_orcamento, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer " data-confirm-delete="<%= o_orcamento_path(o_orcamento) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph-trash-simple me-2"></i>Excluir
                      </a>
                    <% end %>
                    <td><%= o_orcamento.user.nome %></td>
                    <td><%= o_orcamento.g_veiculo.marca %></td>
                    <td><%= " #{o_orcamento.g_centro_custo.nome} - #{o_orcamento.g_centro_custo.valor_inicial}" %></td>
                    <td><%= o_orcamento.o_tipo_solicitacao.descricao %></td>
                    <td><%= o_orcamento.o_status.descricao %></td>
                    <td><%= o_orcamento.valor_total %></td>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-outline-secondary btn-sm mx-1"').html_safe %>
  </div>
</div>
