<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar O Proposta</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @o_proposta %>">
          <p>
            <strong>O Orcamento:</strong>
            <%= @o_proposta.o_orcamento %>
          </p>
          <p>
            <strong>User:</strong>
            <%= @o_proposta.user %>
          </p>
          <p>
            <strong>O Status:</strong>
            <%= @o_proposta.o_status %>
          </p>
          <p>
            <strong>Valor Total:</strong>
            <%= @o_proposta.valor_total %>
          </p>
          <p>
            <strong>Itens:</strong>
            <%= @o_proposta.itens %>
          </p>
          <p>
            <strong>Created By:</strong>
            <%= @o_proposta.created_by %>
          </p>
          <p>
            <strong>Updated By:</strong>
            <%= @o_proposta.updated_by %>
          </p>
          <p>
            <strong>Deleted At:</strong>
            <%= @o_proposta.deleted_at %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_o_proposta_path(@o_proposta), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", o_propostas_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @o_proposta, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
